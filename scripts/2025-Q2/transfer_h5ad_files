# Define your samples
samples=(IMMUNEX001 IMMUNEX002 IMMUNEX003 IMMUNEX001 IMMUNEX004 IMMUNEX005 IMMUNEX006 IMMUNEX007 IMMUNEX008 IMMUNEX009 IMMUNEX010 IMMUNEX011 IMMUNEX012 IMMUNEX013 IMMUNEX014 IMMUNEX015 IMMUNEX016 IMMUNEX017 IMMUNEX018)

# Loop through each sample and download + rename
for sample in "${samples[@]}"; do
    remote_path="/scratch/Projects/IMMUNEX/segmentation/bin2cell/bin2cell_output/${sample}/adata_processed.h5ad"
    local_path="$HOME/Documents/${sample}.h5ad"
    
    rsync -avz youruser@remote_host:"$remote_path" "$local_path"
done
